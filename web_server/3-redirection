#!/usr/bin/env bash
# 3-redirection
# Configures Nginx to redirect /redirect_me (301 Moved Permanently)
# and serve "Holberton School" at /

set -e  # Exit on error

# Update & install nginx
sudo apt-get update -y
sudo apt-get install nginx -y

# Backup default configuration
sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

# Ensure /var/www/html exists and create index.html
sudo mkdir -p /var/www/html
echo "Holberton School" | sudo tee /var/www/html/index.html > /dev/null

# Overwrite default Nginx server block with redirect included
sudo tee /etc/nginx/sites-available/default > /dev/null << 'EOF'
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm;

    server_name _;

    location / {
        try_files $uri $uri/ =404;
    }

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }
}
EOF

# Test Nginx configuration
sudo nginx -t

# Restart Nginx to apply changes
sudo service nginx restart

