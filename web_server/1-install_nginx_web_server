#!/bin/bash
# 1-install_nginx_web_server
# Install nginx web server and configure default page

# Update package list and install nginx silently
sudo apt-get update -y
sudo apt-get install nginx -y

# Make sure nginx is listening on port 80 (default)
# Set up the default page with the required string
echo "Holberton School for the win!" > /var/www/html/index.html

# Restart nginx without using systemctl (use service command)
service nginx restart
